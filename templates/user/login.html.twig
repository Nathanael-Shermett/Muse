{% extends 'base.html.twig' %}

{% block title %}{{ 'Log In'|trans }}{% endblock %}

{% block body %}

	<div class="wrapper">

		<form action="{{ path('login') }}" method="post">

			<div><input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}"
						required/></div>
			<div><input type="password" id="password" name="_password" placeholder="Password" required/></div>

			<button type="submit">{{ 'Log Into Muse'|trans }}</button>
		</form>

	</div>

{% endblock %}